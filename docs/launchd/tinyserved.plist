<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple Computer//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
  <key>Label</key>
  <string>dev.tinyserve.daemon</string>

  <key>ProgramArguments</key>
  <array>
    <!-- Update this path to match your installation -->
    <!-- Homebrew Intel: /usr/local/bin/tinyserved -->
    <!-- Homebrew Apple Silicon: /opt/homebrew/bin/tinyserved -->
    <!-- Manual build: ~/go/bin/tinyserved or custom path -->
    <string>/opt/homebrew/bin/tinyserved</string>
  </array>

  <key>EnvironmentVariables</key>
  <dict>
    <key>TINYSERVE_API</key>
    <string>http://127.0.0.1:7070</string>
    <!-- Uncomment and set your PATH if Docker CLI is not found -->
    <!-- <key>PATH</key> -->
    <!-- <string>/opt/homebrew/bin:/usr/local/bin:/usr/bin:/bin</string> -->
  </dict>

  <key>RunAtLoad</key>
  <true/>

  <key>KeepAlive</key>
  <dict>
    <key>SuccessfulExit</key>
    <false/>
  </dict>

  <key>ThrottleInterval</key>
  <integer>10</integer>

  <key>StandardOutPath</key>
  <string>/tmp/tinyserved.log</string>

  <key>StandardErrorPath</key>
  <string>/tmp/tinyserved.err</string>

  <key>ProcessType</key>
  <string>Background</string>
</dict>
</plist>
